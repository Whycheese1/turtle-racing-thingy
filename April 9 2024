import turtle as t

screen = t.Screen()

screen.bgcolor("light blue")
screen.setup(500,500)
screen.title('Turtle Race assignment')

t.pu()
t.speed(10)
t.goto(-140, 140)
t.pd()

for step in range(6):
    t.write(step, align='center')
    t.rt(90)
    t.fd(10)
    t.pd()
    t.fd(150)
    t.pu()
    t.back(160)
    t.lt(90)
    t.fd(20)
    
